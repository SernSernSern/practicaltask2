.div2
    +desktop()
        width 80% 
        float left
        padding-left 6u
    +mobile()
        width 100%

.shopbar
    +desktop()
        padding-bottom 8u
        flex-direction row
    +mobile()
        padding-bottom 6u
.shopfoundselector
    +desktop()
        display flex
        text-align left
        flex-direction row
    +mobile()
        display flex
        text-align left
        
.shopfound
    +desktop()
        text-align left
        flex-direction row
        margin-left: 16px
    +mobile()
        text-align left
        flex-direction row
    

.shopselector
    +desktop()
        margin-left 8u
        margin-top -3px
        flex-direction row
    +mobile()
        flex-direction row
        margin-bottom 2u
        margin-top 2u
.shopfiltertab
    +desktop()
        display flex
        margin-top -3px
        align-self center
        margin-left: 58% 
    +mobile()
        display: flex
        margin-top: -3px
              
        
.shoptabnav
    +desktop()
        display flex
        flex-wrap wrap
        flex-direction row
    +mobile()
        flex-wrap wrap
        flex-direction row
        
.shoptext
    +desktop()
        color #6c6c6c
        font-size 18px
        font-weight 600
        margin 0
        font-family sans-serif
    +mobile()
        color #6c6c6c
        font-size 18px
        font-weight 600
        margin 0
        font-family sans-serif

.cards
    +desktop()
        flex-direction row
        flex-wrap wrap
        margin-left 2u

.card
    +desktop()
        background-color white
        padding-left 12.5px
        padding-right 12.5px
        box-shadow 2px 2px 6px rgba(black, 0.1)

.shopimage
    width: 35u
    height: 42u

.singleproduct
    margin-bottom 35px
    position relative

.prod
    padding-top 17px
    display flex
    flex-direction row
    justify-content space-between

.prodtext
    color #5d5d5d
    font-size 14px
    font-weight 600
    margin-bottom 8px
    font-family 'sans-serif'

.prodtextred
    color #ee3333
    font-weight 600
    font-size 14px
    font-family 'sans-serif'

.productcart
    padding-bottom 5px
    position relative

.productcarttext
    font-family 'sans-serif'
    font-size 14px
    color #686868