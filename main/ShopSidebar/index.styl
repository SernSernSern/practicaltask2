.root
  padding-right 0px

.searchBarRow
  flex-direction row

.input
  color #8e8d8d
  background #f1f1f1
  font(l)
  padding-left 2u
  padding-right 6u
  height 6u

.button
  width 6u
  height 6u
  background-color #dedede
  justify-content center
  align-items center

.categoryItem
  flex-direction row
  justify-content space-between
  margin-top 2u
  text-align left

.categoryText 
  font(xl)
  font-weight 300
  font-family sans-serif
  color #686868

.colorItem
  flex-direction row
  justify-content space-between
  flex-wrap wrap

.circleColor
  radius(circle)
  float left
  height 3u
  width 3u
  flex-wrap wrap
  &.red
    background-color #ff4136  
  &.blue
    background-color #3649ff
  &.pink
    background-color #ff01f0
  &.sky
    background-color #00c0ff
  &.green
    background-color #00ffae
  &.purple 
    background-color #8a00ff 

.sizeItem
  text-align left 
  flex-direction row
  justify-content space-between

.sizeText
  font(l)
  font-weight 300
  color #686868