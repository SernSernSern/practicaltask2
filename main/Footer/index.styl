.footer
  &.area
    padding-bottom 6u
    padding-top 6u
    background #f5f5f5
    +tablet()
      padding-top 8u
      padding-bottom 8u
    +desktop()
      padding-top 12u
      padding-bottom 12u
    +wide()
      padding-top 16u
      padding-bottom 16u
  &.container
    width 100%
    padding-right 2u
    padding-left 2u
    +desktop()
      flex-direction row
      justify-content center
  &.column
    justify-content center
    padding-right 8u
    padding-left 8u   
    
  &.widget
    text-align center
    margin-top 4u
  &.logo
    align-items center
    +desktop()
      margin-top 4u
      align-items center
  &.nav
    flex-direction row
    justify-content center
    +desktop()
      margin-top 2u
      padding-bottom 2u
  &.row
    flex-direction row
    justify-content center
  &.image
    width 116px
    height 31px
  &.text
    font(l)
    margin-top 2u
    color #585858
    font-family 'sans-serif'
  &.button
    border 1px solid #3f3f3f
    radius(circle)
    width 4u
    height 4u
    align-items center
    justify-content center
    margin-left 2u
  &.footpadding
    padding 0 2u
  &.center
    text-align center